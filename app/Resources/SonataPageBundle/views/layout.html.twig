{% extends 'SonataPageBundle::base_layout.html.twig' %}

{% block page_container %}
<div class="container">
    <div class="content">
        <div class="row-fluid page-header">
            <div class="span4">
                {{ sonata_page_render_container('title', 'global') }}
            </div>

            <div class="span6 navigation pull-right">
                <div style="text-align: right; margin-bottom: 10px;">
                    {{ sonata_page_render_container('header', 'global') }}
                </div>
            </div>

            <div style="clear: both"></div>
        </div>

        {% if page is defined %}
        <div class="row-fluid">
            {% if page.name != 'global'%}
            {{ sonata_page_render_container('content_top', 'global') }}
            {% endif %}
            {{ sonata_page_render_container('content_top', page) }}
        </div>
        {% endif %}

        <div class="row-fluid">
            {% if content is defined %}
            {{ content|raw }}
            {% else %}
            {% set content = block('content') %}
            {% if content|length > 0 %}
            {{ content|raw }}
            {% elseif page is defined %}
            {{ sonata_page_render_container('content', page) }}
            {% endif %}
            {% endif %}
        </div>

        {% if page is defined %}
        <div>
            {{ sonata_page_render_container('content_bottom', page) }}

            {% if page.name != 'global'%}
            {{ sonata_page_render_container('content_bottom', 'global') }}
            {% endif %}
        </div>
        {% endif %}
    </div>

    <footer>
        <div class="row-fluid" style="padding: 20px 20px 10px">
            <div class="span8 offset1">
                <div class="span2">
                    <a href="/blog"><b>Blog</b></a>
                </div>
                <div class="span2 dropdown">
                    <a class="dropdown-toggle" id="drop1" role="button" data-toggle="dropdown" href="#"><b>Shop</b> <b class="caret"></b></a>
                    <ul id="footer-menu1" class="dropdown-menu" role="menu" aria-labelledby="drop1">
                        <li><a href="/shop/category/5/clothes">Clothes</a></li>
                        <li><a href="/shop/category/4/clothes">Mugs</a></li>
                        <li><a href="/shop/category/2/trainings">Trainings</a></li>
                        <li><a href="/shop/category/1/goodies">Goodies</a></li>
                    </ul>
                </div>
                <div class="span2 dropdown">
                    <a class="dropdown-toggle" id="drop2" role="button" data-toggle="dropdown" href="#"><b>Extras</b> <b class="caret"></b></a>
                    <ul id="footer-menu2" class="dropdown-menu" role="menu" aria-labelledby="drop2">
                        <li><a href="/media/gallery/">Gallery</a></li>
                        <li><a href="/media">Media & SEO</a></li>
                    </ul>
                </div>
                <div class="span2">
                    <a href="/admin"><b>Admin</b></a>
                </div>
            </div>
            <div class="span3">
                <ul style="text-align: right">
                    <li style="display: inline-block;"><a href="https://github.com/sonata-project/" target="_blank"><img src="/bundles/sonatademo/images/glyphicons_social_21_github.png" width="24" height="24"/></a></li>
                    <li style="display: inline-block;"><a href="https://twitter.com/sonataproject" target="_blank"><img src="/bundles/sonatademo/images/glyphicons_social_31_twitter.png" width="24" height="24"/></a></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid" style="text-align: right">
