{% extends sonata_block.templates.block_base %}

{% block block %}
    <ul style="text-align: right; float: right; display: inline-block; margin:0;">
        {% if user %}
            <li style="display: inline-block"><i class="icon-edit"></i>&nbsp;<a href="{{ path('sonata_user_profile_show') }}">{{ user.username }}</a></li>
            <li style="display: inline-block"><i class="icon-off"></i>&nbsp;<a href="{{ path('fos_user_security_logout') }}">{{ 'link_logout' | trans({}, "SonataUserBundle") }}</a></li>
        {% else %}
            <li style="display: inline-block"><i class="icon-user"></i>&nbsp;<a href="{{ path('fos_user_security_login') }}">{{ 'link_login'|trans({}, 'SonataUserBundle') }}</a></li>
            <li style="display: inline-block"><i class="icon-pencil"></i>&nbsp;<a href="{{ path('fos_user_registration_register') }}">{{ 'link_register'|trans({}, 'SonataUserBundle') }}</a></li>
        {% endif %}
    </ul>
{% endblock %}
