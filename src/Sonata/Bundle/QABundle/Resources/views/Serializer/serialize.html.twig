<h1>Serialize test page</h1>

<form action="{{ url('sonata_qa_serialize') }}" method="post">

    <p>
        <label for="class">Please select a class to serialize:</label><br />
        <select name="class">
            {% for class in classes %}
                <option value="{{ class }}" {% if app.request.get('class') == class %}selected="selected"{% endif %}>{{ class }}</option>
            {% endfor %}
        </select>
    </p>

    <p>
        <label for="id">Id.:</label>
        <input type="text" name="id" value="{{ app.request.get('id') }}" placeholder="Enter a PK (optional)">
    </p>

    <p>
        <label for="group">Group:</label>
        <input type="text" name="group" value="{{ app.request.get('group') }}" placeholder="Enter a group (optional)">
    </p>

    <p>
        <label for="version">Version:</label>
        <input type="text" name="version" value="{{ app.request.get('version') }}" placeholder="Enter a version (optional)">
    </p>

    <p>
        <input type="submit">
    </p>
</form>

<div class="row">
    <div class="col-lg-6">
        <h3>json</h3>
        <pre>{{ raw['json'] }}</pre>
    </div>
    <div class="col-lg-6">
        <h3>xml</h3>
        <pre>{{ raw['xml'] }}</pre>
    </div>
</div>

