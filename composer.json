{
    "name": "sonata-project/sandbox",

    "description": "The Sandbox for the Sonata environment (with ecommerce bundles)",

    "autoload": {
        "psr-0": { "": "src/" }
    },

    "repositories": [
        {
            "type": "package",
            "package": {
                "name":    "sonata-project/ecommerce",
                "version": "2.2",
                "source": {
                    "url":       "git@gitlab.fullsix.com:php-labs/sf2-sonata-ecommerce.git",
                    "type":      "git",
                    "reference": "2.2"
                },
                "autoload": {
                    "psr-0": {
                        "Sonata\\": ""
                    }
                },
                "target-dir": "Sonata"
            }
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "php": ">=5.3.3",

        "doctrine/doctrine-bundle": "1.2.*",

        "twig/twig": "1.12.*",
        "twig/extensions": "1.0.*@dev",

        "symfony/symfony": "2.2.*",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.2.*",
        "symfony/monolog-bundle": "2.2.*",

        "sensio/distribution-bundle": "2.2.*",
        "sensio/framework-extra-bundle": "2.2.*",
        "sensio/generator-bundle": "2.2.*",

        "jms/security-extra-bundle": "1.4.*",
        "jms/di-extra-bundle": "1.3.*",
        "jms/serializer-bundle": "dev-master",

        "doctrine/orm": ">=2.2.3,<2.4-dev@stable",

        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-fixtures-bundle": "2.1.*@dev",
        "doctrine/data-fixtures": "1.0.*@dev",

        "knplabs/gaufrette": "0.1.*",
        "knplabs/knp-menu-bundle": "1.1.x-dev",

        "sonata-project/easy-extends-bundle": "2.1.*",
        "sonata-project/intl-bundle": "2.1.*",
        "sonata-project/seo-bundle": "1.*",
        "sonata-project/formatter-bundle": "2.2.*",
        "sonata-project/doctrine-extensions": "1.*",
        "sonata-project/exporter": "1.*",
        "sonata-project/notification-bundle": "2.2.*@dev",
        "sonata-project/admin-bundle": ">=2.2.2,<2.3",
        "sonata-project/block-bundle": "2.2.*",
        "sonata-project/page-bundle": "2.2.*",
        "sonata-project/media-bundle": "2.2.*",
        "sonata-project/news-bundle": "2.2.*@dev",
        "sonata-project/user-bundle": "2.2.*@dev",
        "sonata-project/doctrine-orm-admin-bundle": "2.2.*",

        "symfony-cmf/routing-extra-bundle": "1.*",
        "symfony-cmf/routing": "1.*",

        "friendsofsymfony/user-bundle": "1.3.*",

        "dflydev/markdown": "1.0.2",
        "simplethings/entity-audit-bundle": "dev-master",
        "willdurand/faker-bundle": "dev-master",

        "kriswallsmith/assetic": "1.1.*",

        "sonata-project/ecommerce": "2.2"
    },

    "require-dev": {
        "phpunit/phpunit": ">=3.7.15",
        "guzzle/guzzle": "3.0.*"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "branch-alias": {
            "dev-2.0": "2.0.x-dev",
            "dev-2.1": "2.1.x-dev",
            "dev-master": "2.2.x-dev"
        }
    }
}
